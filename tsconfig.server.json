{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "allowJs": true,
    "types": ["node"],
    "lib": ["ES2020", "DOM"],
    "resolveJsonModule": true
  },
  "include": ["src/services/**/*", "src/types/**/*"],
  "exclude": ["node_modules", "dist"]
} 